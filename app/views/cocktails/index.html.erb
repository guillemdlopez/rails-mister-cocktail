<div class="banner">
  <div class="container">
    <div class="banner-info">
      <h1 class="mb-4">Drink it. Recommend it.</h1>
      <%= link_to "New Cocktail", new_cocktail_path, class: 'btn btn-primary'%>
    </div>
  </div>
</div>

<div class="background-drink">
  <div class="container">
    <div class="wrapper w-100">
      <h1 class="text-center">Drink it.</h1>
      <div class="cards">
        <% @cocktails.each do |cocktail| %>
        <div class="cocktail-card py-2 mt-4">
          <p><%= link_to cocktail.name, cocktail_path(cocktail) %></p>
        </div>
          <% end %>
      </div>
    </div>
  </div>
</div>

<div class="background-recommend">
  <div class="container">
    <div class="wrapper">
      <h1 class="text-center">Recommend it.</h1>
      <div class="recommend text-center py-4">
        <h2><strong>Share your favourite!</strong></h2>
        <p class="mb-4">Do you also want to recommend a cocktail? Go ahead!</p>
      </div>
      <div class="form text-center">
        <%= simple_form_for(@cocktail) do |f|%>
        <%= f.input :name %>
        <%= f.submit class: 'btn btn-primary mb-4' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="footer bg-black">
  <ul class="inline-list pl-0 mb-0 text-center">
     <h4 class="text-secondary text-center pt-5">Follow us on social media for more content</h4>
    <li>
      <a href="#">
        <i class="fab fa-facebook-f"></i>
      </a>
    </li>
    <li>
      <a href="#">
        <i class="fab fa-twitter"></i>
      </a>
    </li>
    <li>
      <a href="#">
        <i class="fab fa-github"></i>
      </a>
    </li>
    <li>
      <a href="#">
        <i class="fab fa-instagram"></i>
      </a>
    </li>
  </ul>
</div>



